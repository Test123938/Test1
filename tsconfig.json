{
    "include": [
        "src/**/*",
        "src/*"
    ],
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es2016"
    },
    "typedocOptions": {
        "out": "./api",
        "name": "Wolfie2D",
        "includeVersion": true,
        "entryPoints": [
            "./src/Wolfie2D/index.ts"
        ],
        "entryPointStrategy": "expand",
        "includes": "./includes",
        "media": "./media",
        "readme": "./readme.md",
        "theme": "hierarchy",
        "umlClassDiagram": {
            "type": "simple",
            "location": "local",
            "format": "svg",
            "arrowColor": "#ff0000",
            "boxBorderColor": "#ff0000"
        }
    }
}